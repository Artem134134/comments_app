<h2>Все комментарии.</h2>

<% @comments.each do |comment| %>

	<div class = "comment">	
		<p>Email: <%= comment.name %></p>
		<p>Текст:<strong><%=  comment.text %></strong></p>
		<p>Дата создания: <%= comment.date %></p>
		<hr>	
	</div>

    | <%= link_to "Изменить", edit_comment_path(comment) %> |
     <%= button_to "Удалит", comment_path(comment), formmethod: :delete, data: { confirm: 'Вы уверены?' } %>
  <hr>
<% end %>


<%= form_with model: @comment, local: true do |form| %>
<div>
  <p><%= form.label :name, "Email" %></p>
  <p><%= form.text_field :name %></p>

  <p><%= form.label :text, "Текст" %></p>
  <p><%= form.text_area :text, rows: 5 %></p>
  	
  <p><%= form.label :date, "Дата создания" %></p>
  <p><%= form.text_field :date %></p>
  
  <p><%= form.submit 'Добавить комментарий' %></p>

</div>  
<% end %>